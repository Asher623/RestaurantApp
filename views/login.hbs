<div class="divs">

<div class="modal" id = "logInModal">
  <div class="content">
    <form class="" action="login" method="post">
      <h1 id = "CustomLog" >Sign In</h1>

      <div class="errors">
        {{# if success}}
          <h1>SUCCESS</h1>
        {{else}}
        {{logErrors}}
          {{# if errors}}
            <ul>
              {{# each errors}}
                <li>{{this.msg}}</li>
              {{/each}}
            </ul>

          {{/if}}
        {{/if}}
      </div>

      <label for="email">Email</label>

      <input type="email" name="email" id = "email" value="{{data.email}}">

      <label for="password">Password</label>

      <input type="password" name="password" value="">

      <input id="build_a" class = "logButton" type="submit" name="button" value="SIGN IN">
    </form>
  </div>
</div>

